<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <Image Margin="40,10" Width="100" Source="Images/ThePhoto.jpg" Height="100"></Image>
            <TextBlock Margin="40,10" FontSize="20" TextAlignment="Center">Username</TextBlock>
            <TextBox Name="UN" Margin="100,10" FontSize="20" ></TextBox>
            <TextBlock Margin="40,10" FontSize="20" TextAlignment="Center">Password</TextBlock>
            <PasswordBox Name="PW" Margin="100,10" FontSize="20" ></PasswordBox>
            <Button Click="Button_Click_1"  Margin="100,20" FontSize="20">Sign In</Button>

        </StackPanel>
    </Grid>
</Window>
