<Window x:Class="WpfApp7.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="Window1" Height="630" Width="800">
    <Grid>
        <StackPanel>
            
        <TextBlock FontSize="20" FontWeight="DemiBold" Name="txtb1"></TextBlock>
        <DataGrid Name="BooksDg" Width="700" Height="400" SelectionChanged="BooksDg_SelectionChanged"></DataGrid>

            <Button FontSize="20" Name="bt" Click="Button_Click" Margin="40,10">Insert Into SCard</Button>
            <Button FontSize="20" Click="Button_Click_1" Margin="40,10">Show Your SCard History</Button>
            <Button FontSize="20" Click="Button_Click_2"  Margin="40,10">Show Books</Button>
        </StackPanel>
    </Grid>
</Window>
